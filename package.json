{
    "name": "sharppad",
    "displayName": "SharpPad",
    "description": "Test snippets of C# code directly from your editor!",
    "version": "0.0.1",
    "publisher": "jmazouri",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:csharp",
        "onCommand:sharppad.showSharpPad"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "SharpPad configuration",
            "properties": {
                "sharppad.listenServerPort": {
                    "type": "number",
                    "default": 5255,
                    "description": "The port for the SharpPad HTTP server to listen on."
                },
                "sharppad.colorTheme": {
                    "type": "string",
                    "default": "dark",
                    "enum": [
                      "dark",
                      "light"
                    ],
                    "enumDescriptions": [
                      "The dark theme - matches the default Dark+",
                      "The light theme - matches the default Light+"
                    ],
                    "description": "The color theme for the output window."
                }
            }
        },
        "commands": [
            {
                "command": "sharppad.showSharpPad",
                "title": "Show SharpPad window"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "he": "^1.1.1"
    }
}
